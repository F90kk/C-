<Window x:Class="LibraryApp.ReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чтение книги" Height="450" Width="800">
    <Grid>
        <Canvas>
            <TextBlock x:Name="CurrentPage" Width="400" Height="400" Canvas.Left="0" TextWrapping="Wrap"/>
            <TextBlock x:Name="NextPage" Width="400" Height="400" Canvas.Left="400" TextWrapping="Wrap"/>
        </Canvas>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Предыдущая страница" Click="PreviousPage_Click" Margin="5"/>
            <Button Content="Следующая страница" Click="NextPage_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>