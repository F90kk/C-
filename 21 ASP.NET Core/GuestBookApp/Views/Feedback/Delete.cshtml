@model GuestBookApp.Models.Feedback
@{
    ViewData["Title"] = "Удалить отзыв";
}

<h2>@ViewData["Title"]</h2>

<h3>Вы уверены, что хотите удалить этот отзыв?</h3>
<div>
    <h4>Отзыв</h4>
    <dl class="row">
        <dt class="col-sm-2">Имя</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">Отзыв</dt>
        <dd class="col-sm-10">@Model.Message</dd>
        <dt class="col-sm-2">Рейтинг</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
        <dt class="col-sm-2">Дата</dt>
        <dd class="col-sm-10">@Model.SubmittedAt.ToString("g")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button> |
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
