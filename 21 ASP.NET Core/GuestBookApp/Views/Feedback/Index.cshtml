@model IEnumerable<GuestBookApp.Models.Feedback>
@{
    ViewData["Title"] = "Отзывы";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Оставить отзыв</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Отзыв</th>
            <th>Рейтинг</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Message</td>
                <td>@item.Rating</td>
                <td>@item.SubmittedAt.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
